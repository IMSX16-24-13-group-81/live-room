{
  "compilerOptions": {
    "target": "es2020",                   // Specify ECMAScript target version
    "module": "commonjs",                 // Specify module code generation
    "rootDir": "./src",                   // Specify the root directory of input files
    "outDir": "./dist",                   // Specify the output directory for generated files
    "esModuleInterop": true,              // Enables compatibility with Babel
    "strict": true,                       // Enable all strict type-checking options
    "skipLibCheck": true,                  // Skip type checking of all declaration files (*.d.ts)
    "paths": {
      "drizzle/*": ["./schema/*"] // Adjust the path as necessary
    },
  },
  "include": [
    "src/**/*.ts"                         // Specify files to be included in the program
  ],
  "exclude": [
    "node_modules",                       // Exclude the node_modules directory
    "**/*.spec.ts"                        // Exclude test files
  ]
}